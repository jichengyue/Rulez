<div class='col-md-12'>
  <% if @context.errors.any? %>
    <div id='error_explanation' class='alert alert-danger'>
      <h4><%= pluralize(@context.errors.count, 'error') %> prohibited this context from being saved:</h4>
      <ul>
      <% @context.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class='col-md-6'>
  <%= form_for @context, html: { role: 'form' } do |f| %>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_field :description, rows: 10, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :variables %>
      <%= f.select :variable_ids, Rulez::Variable.all.to_a.collect {|x| [x.name, x.id]}, {}, :multiple => true, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Back', contexts_path, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
