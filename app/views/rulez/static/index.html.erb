<%= javascript_include_tag "rulez/index" %>
<%= stylesheet_link_tag "rulez/dashboard" %>

<%= render partial: 'nav' %> 

<div class='page-header'>
  <h1>Dashboard</h1>
</div>

<div class='row'>
  <div class='panel'>
    <div class='panel-heading'>
      Doctor
    </div>
    <div class='panel-body'>
      <div id='doctor_button' class='btn btn-primary'>
        Run Doctor
      </div>
    </div>
    <div id='doctor_output'>
    </div>
  </div>

  <div class='panel'>
    <div class='panel-heading'>
      Logger
    </div>
    <div class='panel-body'>
      <div class=''>      
        <div id='log-update-button' class='btn btn-primary log-buttons'>
          Update
        </div>
      </div>
      <div class=''>      
        <div id='log-clear-button' class='btn btn-primary log-buttons'>
          Clear log file
        </div>
      </div>
      <div class=''>
        Numero Righe: <input id="log_number_lines" type="text" size='1' value='20'>
      </div>
      <div class='btn-group' data-toggle='buttons'>
        <label class='label-log-button btn btn-default log-danger'>
          <input id='log_fatal_button' type='checkbox' class='log-buttons'> Fatal
        </label>
        <label class='label-log-button btn btn-default log-danger'>
          <input id='log_error_button' type='checkbox' class='log-buttons'> Error
        </label>
        <label class='label-log-button btn btn-default log-warning'>
          <input id='log_warning_button' type='checkbox' class='log-buttons'> Warning
        </label>
        <label class='label-log-button btn btn-default log-info'>
          <input id='log_info_button' type='checkbox' class='log-buttons'> Info
        </label>
        <label class='label-log-button btn btn-default log-default'>
          <input id='log_debug_button' type='checkbox' class='log-buttons'> Debug
        </label>
      </div>
    </div>
    <ul id='log_result' class='list-group'>
    </ul>
   </div>
</div>