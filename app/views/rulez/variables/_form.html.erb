<%= form_for @variable, html: { class: 'form-horizontal' } do |f| %>
  <% if @variable.errors.any? %>
    <div id='error_explanation' class='alert alert-error'>
      <h4><%= pluralize(@variable.errors.count, 'error') %> prohibited this context from being saved:</h4>
      <ul>
      <% @variable.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='control-group'>
    <%= f.label :name, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :description, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_area :description %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :model, class: 'control-label' %>
    <div class='controls'>
      <%= f.select :model, @models.collect {|x| [x.name, x.name]}, {}, :multiple => false %>
    </div>
  </div>
  <div class='form-actions'>
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', contexts_path, class: 'btn' %>
  </div>
<% end %>
