<%= render partial: 'nav' %> 

<div class='page-header'>
  <h1>Listing variables</h1>
</div>

<div class='span12'>
  <table class='table table-bordered table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @variables.each do |variable| %>
        <tr>
          <td><%= variable.name %></td>
          <td><%= variable.description %></td>
          <td>
            <div class='btn-group'>
              <%= link_to 'Show', variable, class: 'btn btn-mini' %>
              <%= link_to 'Edit', edit_variable_path(variable), class: 'btn btn-mini' %>
              <%= link_to 'Destroy', variable, class: 'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class='form-actions'>
    <%= link_to 'New Variable', new_variable_path, class: 'btn btn-primary' %>
  </div>
</div>