<%= javascript_include_tag "rulez/alternatives" %>
<script type="text/javascript">
  var context_id = <%= @alternative.context.id %>;
</script>

<div class='col-md-12'>
  <% if @alternative.errors.any? %>
    <div id="error_explanation" class='alert alert-danger'>
      <h4><%= pluralize(@alternative.errors.count, "error") %> prohibited this alternative from being saved:</h4>
      <ul>
      <% @alternative.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class='col-md-6'>
  <%= form_for([@rule, @alternative]) do |f| %>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    
    <div class='form-group' id='available_variables'>
    </div>

    <div class="form-group">
      <%= f.label :condition %><br>
      <%= f.text_area :condition, rows: 10, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :alternative %><br>
      <%= f.text_area :alternative, rows: 10, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Back', rule_path(@rule) ,class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
