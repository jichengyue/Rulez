<%= form_for @context, html: { class: 'form-horizontal' } do |f| %>
  <% if @context.errors.any? %>
    <div id='error_explanation' class='alert alert-error'>
      <h4><%= pluralize(@context.errors.count, 'error') %> prohibited this context from being saved:</h4>
      <ul>
      <% @context.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='control-group'>
    <%= f.label :name, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :description, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_area :description, rows: 10%>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :variables, class: 'control-label' %>
    <div class='controls'>
      <%= f.select :variable_ids, Rulez::Variable.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
    </div>
  </div>
  <div class='form-actions'>
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', contexts_path, class: 'btn' %>
  </div>
<% end %>
