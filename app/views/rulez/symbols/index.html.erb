<div class='page-header'>
  <h1>Listing symbols</h1>
</div>

<div class='span9'>
  <table class='table table-bordered table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @symbols.each do |symbol| %>
        <tr>
          <td><%= symbol.name %></td>
          <td><%= symbol.description %></td>
          <td>
            <div class='btn-group'>
              <%= link_to 'Show', symbol, class: 'btn btn-mini' %>
              <%= link_to 'Edit', edit_symbol_path(symbol), class: 'btn btn-mini' %>
              <%= link_to 'Destroy', symbol, class: 'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class='form-actions'>
    <%= link_to 'New Symbol', new_symbol_path, class: 'btn btn-primary' %>
  </div>
</div>