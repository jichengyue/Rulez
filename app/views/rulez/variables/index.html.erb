<%= render partial: 'nav' %> 

<% if notice %>
  <div id='notice' class='alert alert-success'>
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div id='alert' class='alert alert-danger'>
    <%= alert %>
  </div>
<% end %>

<div class='page-header'>
  <h1>Listing variables</h1>
</div>

<div class='row'>
  <table class='table table-bordered table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @variables.each do |variable| %>
        <tr>
          <td><%= variable.name %></td>
          <td><%= variable.description %></td>
          <td>
            <div class='btn-group'>
              <%= link_to 'Show', variable, class: 'btn btn-default btn-xs' %>
              <%= link_to 'Edit', edit_variable_path(variable), class: 'btn btn-default btn-xs' %>
              <%= link_to 'Destroy', variable, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to 'New Variable', new_variable_path, class: 'btn btn-primary' %>
  </div>
</div>