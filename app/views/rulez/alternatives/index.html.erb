<h1>Listing alternatives</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Condition</th>
      <th>Alternative</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @alternatives.each do |alternative| %>
      <tr>
        <td><%= alternative.description %></td>
        <td><%= alternative.condition %></td>
        <td><%= alternative.alternative %></td>
        <td><%= link_to 'Show', alternative %></td>
        <td><%= link_to 'Edit', edit_alternative_path(alternative) %></td>
        <td><%= link_to 'Destroy', alternative, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

