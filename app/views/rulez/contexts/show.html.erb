<%= render partial: 'nav' %>

<% if notice %>
  <div id='notice' class='alert alert-success'>
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div id='alert' class='alert alert-danger'>
    <%= alert %>
  </div>
<% end %>

<div class='row'>
  <dl class='dl-horizontal'>
    <dt><strong>Name:</strong></dt>
      <dd><%= @context.name %></dd>
    <br>
    <dt><strong>Description:</strong></dt>
      <dd><%= @context.description %></dd>
    <br>
    <dt><strong>Variables:</strong></dt>
      <% @context.variables.each do |s| %>
        <dd><%= s.name %></dd>
      <% end %>
    <br>
  </dl>
  <div>
    <%= link_to 'Back', contexts_path, class: 'btn btn-default' %>
    <%= link_to 'Edit', edit_context_path(@context), class: 'btn btn-default' %>
    <%= link_to 'Destroy',
                @context,
                class: 'btn btn-danger',
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </div>
</div>


